<root xmlns:xlink="http://www.w3.org/1999/xlink">
  <g id="acyl-filter">
    <filter id="filter">
      <feTurbulence id="feTurbulence1" result="result1" numOctaves="1" baseFrequency="0.2 0.06" type="turbulence"/>
      <feGaussianBlur id="feGaussianBlur1" in="SourceGraphic" stdDeviation="1.8"/>
      <feComposite id="feComposite1" operator="out" in2="result1"/>
    </filter>
  </g>
  <g id="acyl-visual">
    <use id="visible1" style="fill:url(#acyl-gradient);filter:url(#filter)" xlink:href="#acyl-drawing"/>
  </g>
</root>

