<root xmlns:xlink="http://www.w3.org/1999/xlink">
  <g id="acyl-filter">
    <filter id="filter">
      <feGaussianBlur id="feGaussianBlur1" result="result1" stdDeviation="1.5"/>
      <feComposite id="feComposite1" in2="result1" operator="atop" in="SourceGraphic" result="result2"/>
      <feComposite id="feComposite2" in2="SourceAlpha" in="result2" operator="atop" result="result3"/>
    </filter>
  </g>
  <g id="acyl-visual">
    <use id="visible1" style="fill:url(#acyl-gradient);filter:url(#filter)" xlink:href="#acyl-drawing"/>
  </g>
</root>

