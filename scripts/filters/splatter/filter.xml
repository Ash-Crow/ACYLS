<root xmlns:xlink="http://www.w3.org/1999/xlink">
  <g id="acyl-filter">
    <filter id="filter" x="-200%" y="-200%" width="500%" height="500%">
      <feMorphology id="feMorphology1" operator="dilate" radius="4.0" result="result1"/>
      <feTurbulence id="feTurbulence1" in="SourceGraphic" baseFrequency="0.30 0.30" type="fractalNoise" numOctaves="2"/>
      <feDisplacementMap id="feDisplacementMap1" in="result1" scale="25" yChannelSelector="A"/>
      <feOffset id="feOffset1" dx="-7" dy="-2" result="result2"/>
      <feImage id="feImage1" xlink:href="#support1" result="result3"/>
      <feComposite id="feComposite1" in="result2" in2="result3" operator="out"/>
    </filter>
    <use id="support1" style="fill:#FF0000" xlink:href="#acyl-drawing"/>
  </g>
  <g id="acyl-visual">
    <use id="visible1" transform="translate(24,24) scale(0.75) translate(-24,-24)" style="fill:url(#acyl-gradient);filter:url(#filter)" xlink:href="#acyl-drawing"/>
  </g>
</root>
